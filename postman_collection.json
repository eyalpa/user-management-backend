{
  "info": {
    "name": "User Management API",
    "_postman_id": "9b0d1d7e-8a6a-4c0e-8c1a-2b4a0b1a7c3f",
    "description": "Collection to test users/groups endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1"
    }
  ],
  "item": [
    {
      "name": "Get Users (Pagination)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/users?limit=20&offset=0&extend=true&afterId=",
          "host": ["{{baseUrl}}"],
          "path": ["users"],
          "query": [
            { "key": "limit", "value": "20" },
            { "key": "offset", "value": "0" },
            { "key": "extend", "value": "true" },
            { "key": "afterId", "value": "" }
          ]
        }
      }
    },
    {
      "name": "Get Groups (Pagination)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/groups?limit=20&offset=0&afterId=",
          "host": ["{{baseUrl}}"],
          "path": ["groups"],
          "query": [
            { "key": "limit", "value": "20" },
            { "key": "offset", "value": "0" },
            { "key": "afterId", "value": "" }
          ]
        }
      }
    },
    {
      "name": "Remove User From Group",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/groups/:groupId/users/:userId",
          "host": ["{{baseUrl}}"],
          "path": ["groups", ":groupId", "users", ":userId"]
        }
      }
    },
    {
      "name": "Bulk Update User Statuses",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"updates\": [\n    { \"id\": \"{{userId1}}\", \"status\": \"active\" },\n    { \"id\": \"{{userId2}}\", \"status\": \"blocked\" }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/statuses",
          "host": ["{{baseUrl}}"],
          "path": ["users", "statuses"]
        }
      }
    }
  ]
}
